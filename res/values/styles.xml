<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabBarStyle">@style/MyActionBarTabBarStyle</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabTextStyle</item>
        <item name="android:actionButtonStyle">@style/MyActionButtonStyle</item>
    </style>

    <!-- ActionBar -->
    <style name="MyActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">#F06292</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyActionBarTabBarStyle" parent="android:Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:background">#FCE4EC</item>
    </style>

    <style name="MyActionBarTabTextStyle" parent="android:Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyActionButtonStyle" parent="android:Widget.Holo.ActionButton">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- choice_head -->
    <style name="ChoiceHeadLinearLayout">
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- choice_head_imageView -->
    <style name="ChoiceHeadImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <!-- choice_body_item_linearLayout -->
    <style name="ChoiceHeadItemLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">2</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:background">#FFDEE9</item>
    </style>
    <!-- choice_body_textView -->
    <style name="ChoiceHeadTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#7B7577</item>
    </style>

    <!-- choice_body_item_linearLayout -->
    <style name="ChoiceBodyItemLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:background">@drawable/choice_body_background_border</item>
    </style>

    <style name="ChoiceBodyItemLinearLayoutLeft" parent="ChoiceBodyItemLinearLayout">
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="ChoiceBodyItemLinearLayoutRight" parent="ChoiceBodyItemLinearLayout">
        <item name="android:layout_marginLeft">2dp</item>
    </style>

    <!-- choice_body_item_linearLayout_imageView -->
    <style name="ChoiceBodyItemLinearLayoutImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- choice_body_item_linearLayout_textView -->
    <style name="ChoiceBodyItemLinearLayoutTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
    </style>

</resources>