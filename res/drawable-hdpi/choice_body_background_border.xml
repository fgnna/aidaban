<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 最好的一个解决方案 -->
    <item>
        <shape>
            <padding 
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#999999" />

            <corners android:radius="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="0px"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <solid android:color="@android:color/white" />
        </shape>
    </item>

</layer-list>